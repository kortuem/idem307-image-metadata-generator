# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Secret access code for shared API key access
# Users can enter this code instead of their own API key
SECRET_ACCESS_CODE=your_secret_access_code_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# Upload Configuration (optional overrides)
MAX_FILE_SIZE_MB=10
MAX_TOTAL_UPLOAD_MB=100
MAX_FILES=100

# Rate Limiting / Capacity Management
# Maximum concurrent sessions to prevent out-of-memory crashes
# Each session uses ~80MB (30 images Ã— 2MB base64 avg)
# Render Starter (1GB RAM): Set to 12
# Render Standard (2GB RAM): Set to 25
# Render Pro (8GB RAM): Set to 100
MAX_CONCURRENT_SESSIONS=12
